@model BangazonWebsite.Models.ViewModels.OrderProductViewModel

@{
    ViewData["Title"] = "CompletedOrderDetail";
}

<h2>Order Detail</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Product")
            </th>
            <th>
                @Html.DisplayName("Price")
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model.Product)
        {
            <tr>
                <td>
                    <a asp-controller="Products" asp-action="Detail" asp-route-id="@item.ProductId">@item.Title</a>
                </td>
                <td>
                    @item.Price.ToString("C")
                </td>
            </tr>
        }
    </tbody>
    <thead>
        <tr>
            <th></th>
            <th>@Html.DisplayName("Total")</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td></td>
            <td>@Model.totalSale.ToString("C")</td>
        </tr>
    </tbody>
</table>

<div>
    <a asp-controller="Manage" asp-action="Index">Back to Profile</a>
</div>