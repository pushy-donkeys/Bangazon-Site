@model BangazonWebsite.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.PaymentType)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PaymentType.AccountNumber)
        </dd>
    </dl>
</div>
@*Loop through OrderProduct ICollection*@

@foreach (var orderproduct in Model.OrderProduct)
{
    <p>@orderproduct.Product.Title</p>
    <p>@orderproduct.Product.Price</p>
    <p>@orderproduct.Product.Quantity</p>
}
<div>
    <a asp-action="Edit" asp-route-id="@Model.OrderId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
